<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="授業時間はこんな感じに登録されています"
            android:textSize="16dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/time_schedule_item_height"
            android:background="@drawable/border_top_bottom">

            <TextView
                android:id="@+id/label_1"
                style="@style/settingTimeScheduleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="1時間目"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/value_1"
                style="@style/settingTimeScheduleValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="08:45 ~ 10:15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />-->
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/time_schedule_item_height"
            android:background="@drawable/border_top_bottom">

            <TextView
                android:id="@+id/label_2"
                style="@style/settingTimeScheduleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2時間目"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/value_2"
                style="@style/settingTimeScheduleValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30 ~ 12:00"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/title_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/time_schedule_item_height"
            android:background="@drawable/border_top_bottom">

            <TextView
                android:id="@+id/label_3"
                style="@style/settingTimeScheduleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3時間目"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/value_3"
                style="@style/settingTimeScheduleValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:00 ~ 14:30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/time_schedule_item_height"
            android:background="@drawable/border_top_bottom">

            <TextView
                android:id="@+id/label_4"
                style="@style/settingTimeScheduleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4時間目"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/value_4"
                style="@style/settingTimeScheduleValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:45 ~ 16:15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/time_schedule_item_height"
            android:background="@drawable/border_top_bottom">

            <TextView
                android:id="@+id/label_5"
                style="@style/settingTimeScheduleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5時間目"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/value_5"
                style="@style/settingTimeScheduleValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:30 ~ 18:00"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="時間をタップすると変更できるよ"
            android:textSize="16dp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="250dp"
            android:textSize="25dp"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/mainColor"
            android:layout_gravity="center"
            android:background="@drawable/round_image"
            android:layout_height="60dp"
            android:text="保存" />
    </LinearLayout>
</layout>