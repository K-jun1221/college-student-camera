<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="settingTextview" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:drawableRight">@drawable/ic_right_arrow</item>
        <item name="android:background">@drawable/border_top_bottom</item>
        <item name="android:gravity">center_vertical</item>

        <item name="android:textSize">20dp</item>
    </style>

    <style name="settingHelpTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:drawableRight">@drawable/ic_right_arrow</item>
        <item name="android:background">@drawable/border_top_bottom</item>
        <item name="android:gravity">center_vertical</item>

        <item name="android:textSize">20dp</item>
    </style>

    <style name="settingTimeScheduleLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="settingTimeScheduleValue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">30dp</item>
    </style>



</resources>
